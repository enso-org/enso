                t2.at "X" . parse . name . should_equal "X"

            group_builder.specify "map and zip" <|
                data.t.at "a" . map (x -> x + 1) . name . should_equal "a"
                data.t.at "a" . zip (data.t.at "b") [_, _] . name . should_equal "[a] x [b]"

