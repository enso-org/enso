            ((data.t.at "a") % (data.t.at "c")) . name . should_equal "[a] % [c]"
            ((data.t.at "a") ^ (data.t.at "c")) . name . should_equal "[a] ^ [c]"
            ((data.t.at "b") + 'xyz') . name . should_equal "[b] + 'xyz'"
            ((data.t.at "b") + '\0') . name . should_equal "[b] + '\0'"

        group_builder.specify "comparison" <|
            ((data.t.at "b") == '\0\0') . name . should_equal "[b] == '\0\0'"
            ((data.t.at "b") != '\0\0') . name . should_equal "[b] != '\0\0'"
