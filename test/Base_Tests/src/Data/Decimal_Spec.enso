                + [["39463720368547758070000000", 39463720368547758070000000]]
                + [["39463720368547758080000000", 39463720368547758080000000]]
                + [["-39463720368547758090000000", -39463720368547758090000000]]
                + [["-39463720368547758080000000", -39463720368547758080000000]]
